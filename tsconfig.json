{
  "compilerOptions": {
    "target": "ES2019",                          
    "module": "commonjs",                       
    "rootDir": "./src",                         
    "outDir": "./dist",                         
    "esModuleInterop": true,                    
    "strict": true,                             
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]                        
  },
  "include": ["src/**/*", "test"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
